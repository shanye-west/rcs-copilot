/* Add to src/app.postcss */

@tailwind base;
@tailwind components;
@tailwind utilities;

/* Golf-specific color palette */
:root {
  --golf-green-primary: #16a34a;
  --golf-green-secondary: #22c55e;
  --golf-blue-primary: #1e40af;
  --golf-blue-secondary: #3b82f6;
  --golf-sand: #fbbf24;
  --golf-water: #0ea5e9;
  --course-green: #166534;
  --sunset-orange: #ea580c;
}

/* Custom components for golf app */
@layer components {
  .golf-gradient {
    @apply bg-gradient-to-r from-green-600 via-blue-600 to-purple-600;
  }
  
  .golf-card {
    @apply bg-white rounded-2xl shadow-lg overflow-hidden;
  }
  
  .golf-button-primary {
    @apply bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-2xl shadow-lg transition-all hover:scale-105;
  }
  
  .golf-button-secondary {
    @apply bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-2xl shadow-lg transition-all hover:scale-105;
  }
  
  .score-button {
    @apply w-12 h-12 rounded-xl font-bold text-lg transition-all hover:scale-105 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2;
  }
  
  .score-button-active {
    @apply shadow-lg scale-105 ring-2;
  }
  
  .team-header {
    @apply text-white p-4 font-bold;
  }
  
  .hole-dot {
    @apply w-8 h-8 rounded-full text-xs font-bold transition-all flex-shrink-0 flex items-center justify-center;
  }
  
  .hole-dot-active {
    @apply scale-125 shadow-lg;
  }
  
  .swipe-hint {
    @apply text-center text-xs text-gray-500 mt-2;
  }
}

/* Mobile-first responsive design */
@media (max-width: 640px) {
  .mobile-padding {
    @apply px-4;
  }
  
  .mobile-text {
    @apply text-sm;
  }
  
  .fat-finger {
    @apply min-h-[44px] min-w-[44px]; /* iOS recommended minimum touch target */
  }
}

/* Golf score colors */
.score-eagle {
  @apply bg-yellow-400 text-yellow-900 ring-2 ring-yellow-500;
}

.score-birdie {
  @apply bg-red-500 text-white ring-2 ring-red-600;
}

.score-par {
  @apply bg-green-100 text-green-900 ring-2 ring-green-300;
}

.score-bogey {
  @apply bg-blue-100 text-blue-900 ring-2 ring-blue-300;
}

.score-double-plus {
  @apply bg-red-100 text-red-900 ring-2 ring-red-300;
}

/* Team colors */
.team-aviators {
  @apply bg-blue-600;
}

.team-producers {
  @apply bg-red-600;
}

/* Animation utilities */
.slide-in-right {
  animation: slideInRight 0.3s ease-out;
}

.slide-in-left {
  animation: slideInLeft 0.3s ease-out;
}

@keyframes slideInRight {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes slideInLeft {
  from {
    transform: translateX(-100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

/* Custom scrollbar for mobile */
::-webkit-scrollbar {
  width: 4px;
  height: 4px;
}

::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: #a1a1a1;
}

/* Prevent zoom on iOS */
input[type="number"],
input[type="text"],
input[type="email"],
input[type="password"],
input[type="tel"],
select,
textarea {
  font-size: 16px; /* Prevents iOS zoom */
}

/* Touch-friendly form elements */
button, input, select, textarea {
  touch-action: manipulation;
}

/* Loading states */
.loading-shimmer {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* PWA specific styles */
@media (display-mode: standalone) {
  body {
    user-select: none; /* Prevent text selection in PWA mode */
  }
  
  .pwa-safe-area {
    padding-top: env(safe-area-inset-top);
    padding-bottom: env(safe-area-inset-bottom);
    padding-left: env(safe-area-inset-left);
    padding-right: env(safe-area-inset-right);
  }
}