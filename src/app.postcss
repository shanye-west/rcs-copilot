/* Update your src/app.postcss to match the screenshot styling */

@tailwind base;
@tailwind components;
@tailwind utilities;

/* Rowdy Cup Brand Colors (matching screenshots) */
:root {
	--rowdy-navy: #1e3a8a; /* Aviators navy blue */
	--rowdy-red: #dc2626; /* Producers red */
	--rowdy-blue: #3b82f6; /* Accent blue */
	--rowdy-gray: #6b7280; /* Text gray */
	--rowdy-light-gray: #f9fafb; /* Background gray */
}

/* Base styles matching screenshots */
@layer base {
	body {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
		background-color: #f9fafb;
		color: #374151;
	}
}

/* Component styles matching the clean design */
@layer components {
	/* Card styling matching screenshots */
	.rowdy-card {
		@apply rounded-lg border border-gray-200 bg-white shadow-sm;
	}

	/* Team logo circles matching screenshots */
	.team-logo-aviators {
		@apply flex h-16 w-16 items-center justify-center rounded-full bg-blue-900 text-xs font-bold text-white;
	}

	.team-logo-producers {
		@apply flex h-16 w-16 items-center justify-center rounded-full bg-red-700 text-xs font-bold text-white;
	}

	/* Navigation styling matching top nav */
	.nav-link-active {
		@apply rounded-lg border border-blue-300 bg-blue-100 px-4 py-2 font-medium text-blue-700;
	}

	.nav-link {
		@apply rounded-lg px-4 py-2 font-medium text-gray-600 transition-colors hover:text-gray-900;
	}

	/* Button styling matching screenshots */
	.btn-primary {
		@apply rounded-lg bg-blue-600 px-4 py-2 font-medium text-white transition-colors hover:bg-blue-700;
	}

	.btn-secondary {
		@apply rounded-lg border border-gray-300 bg-white px-4 py-2 font-medium text-gray-700 transition-colors hover:bg-gray-50;
	}

	/* Status badge styling */
	.status-upcoming {
		@apply rounded-full bg-gray-100 px-3 py-1 text-sm font-medium text-gray-700;
	}

	.status-in-progress {
		@apply rounded-full bg-yellow-100 px-3 py-1 text-sm font-medium text-yellow-800;
	}

	.status-completed {
		@apply rounded-full bg-green-100 px-3 py-1 text-sm font-medium text-green-800;
	}

	/* Header styling matching dark headers in screenshots */
	.section-header {
		@apply rounded-lg bg-gray-800 p-6 text-white;
	}

	/* Table styling matching scorecard */
	.scorecard-table {
		@apply min-w-full overflow-hidden rounded-lg border border-gray-200 bg-white shadow-sm;
	}

	.scorecard-header {
		@apply border-b border-gray-200 bg-gray-50 px-4 py-3 text-left text-sm font-medium text-gray-700;
	}

	.scorecard-cell {
		@apply border-b border-gray-100 px-4 py-3 text-center text-sm;
	}

	/* Team row styling */
	.team-row-aviators {
		@apply border-b border-gray-100 bg-blue-50;
	}

	.team-row-producers {
		@apply border-b border-gray-100 bg-red-50;
	}

	.team-name-aviators {
		@apply bg-blue-900 px-4 py-3 text-sm font-bold text-white;
	}

	.team-name-producers {
		@apply bg-red-700 px-4 py-3 text-sm font-bold text-white;
	}

	/* Score input styling */
	.score-input {
		@apply h-8 w-12 rounded border border-gray-300 text-center text-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500;
	}

	/* Bottom navigation styling */
	.bottom-nav {
		@apply fixed right-0 bottom-0 left-0 border-t border-gray-200 bg-white shadow-lg;
	}

	.bottom-nav-item {
		@apply flex-1 px-2 py-3 text-center transition-colors;
	}

	.bottom-nav-item-active {
		@apply text-blue-600;
	}

	.bottom-nav-item-inactive {
		@apply text-gray-400;
	}

	/* Back link styling */
	.back-link {
		@apply flex items-center font-medium text-blue-600 transition-colors hover:text-blue-700;
	}

	/* Modal styling */
	.modal-overlay {
		@apply bg-opacity-50 fixed inset-0 z-50 flex items-center justify-center bg-black p-4;
	}

	.modal-content {
		@apply w-full max-w-md rounded-lg bg-white p-6 shadow-xl;
	}

	/* Form styling */
	.form-input {
		@apply w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-blue-500 focus:ring-2 focus:ring-blue-500;
	}

	.form-label {
		@apply mb-1 block text-sm font-medium text-gray-700;
	}

	/* Team indicator dots */
	.team-dot-aviators {
		@apply h-3 w-3 rounded-full bg-blue-900;
	}

	.team-dot-producers {
		@apply h-3 w-3 rounded-full bg-red-700;
	}

	/* Match container styling */
	.match-container {
		@apply overflow-hidden rounded-lg border border-gray-200 bg-white shadow-sm;
	}

	.match-header {
		@apply border-b border-gray-200 px-6 py-4;
	}

	.match-content {
		@apply p-6;
	}

	/* Admin controls styling */
	.admin-controls {
		@apply rounded-lg border border-yellow-200 bg-yellow-50 p-4;
	}

	.admin-button {
		@apply rounded-lg bg-yellow-600 px-4 py-2 text-sm text-white transition-colors hover:bg-yellow-700;
	}
}

/* Responsive adjustments for mobile */
@media (max-width: 640px) {
	.team-logo-aviators,
	.team-logo-producers {
		@apply h-12 w-12 text-xs;
	}

	.scorecard-cell {
		@apply px-2 py-2;
	}

	.score-input {
		@apply h-7 w-10 text-xs;
	}
}

/* Accessibility improvements */
@media (prefers-reduced-motion: reduce) {
	.transition-colors {
		transition: none;
	}
}
